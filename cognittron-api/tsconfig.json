  "include":["src"],
  "exclude":["node_modules"],
  "compilerOptions": {
    "target": "ES2021",                               
    "module": "commonjs",                                
    "esModuleInterop": true,                             
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "./build"
  }
}